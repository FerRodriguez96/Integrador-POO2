<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
            http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
            version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

    <persistence-unit name="persistencia">
        <class>com.modelo.Cliente</class>
        <class>com.modelo.Empleados</class>
        <class>com.modelo.Jornalero</class>
        <class>com.modelo.Repartidor</class>
    	<class>com.modelo.Productos</class>
    	<class>com.modelo.Sabores</class>
    	<class>com.modelo.Picole</class>
    	<class>com.modelo.Bombon</class>
    	<class>com.modelo.Pedidos</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="jdbc:postresql" />
            <property name="javax.persistence.jdbc.url" value="jbdc:postgresql:://localhost:5432" />
            <property name="javax.persistence.jdbc.user" value="postgres" />
            <property name="javax.persistence.jdbc.password" value="1234" />
        </properties>
    </persistence-unit>

</persistence>